<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <!--/*ketik <android.support.v7.widget.CardView dan mulai membuat widget melayang dengan memulai Cardview*
         app:cardCornerRadiud="20dp" berfunsi memberi membuat sebuah bayangan
            app:cardElevation="20dp"/-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgmakanan"
                android:onClick="suarabuah"
                android:src="@drawable/bakso"
                />
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/txtnamakanan"
                android:layout_gravity="center"
                android:text="@string/makanan"
                android:layout_height="wrap_content"
                android:textSize="25sp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>